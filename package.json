{
  "name": "website",
  "version": "1.0.0",
  "description": "website",
  "main": "index.js",
  "scripts": {
    "test": "test",
    "eslintfix": "eslint src/**/*.js --fix",
    "eslint": "eslint src/**/*.js",
    "stylelint": "stylelint src/**/*.scss",
    "clean": "rimraf dist",
    "start": "better-npm-run start",
    "build": "better-npm-run build"
  },
  "betterScripts": {
    "start": {
      "command": "webpack-dev-server --config build --hot --inline --progress --colors",
      "env": {
        "NODE_ENV": "development"
      }
    },
    "build": {
      "command": "npm run clean && webpack -p --config build --define process.env.NODE_ENV='\"production\"' --progress --profile --colors",
      "env": {
        "NODE_ENV": "production"
      }
    }
  },
  "keywords": [
    "site"
  ],
  "author": "zhaojintian",
  "license": "ISC",
  "devDependencies": {
    "babel-core": "^6.24.1",
    "babel-eslint": "^7.2.3",
    "babel-loader": "^7.0.0",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-1": "^6.24.1",
    "better-npm-run": "0.0.15",
    "css-loader": "^0.28.1",
    "cssnano": "^3.10.0",
    "eslint": "^3.19.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-node": "^4.2.2",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-standard": "^3.0.1",
    "extract-text-webpack-plugin": "^1.0.1",
    "file-loader": "^0.11.1",
    "html": "^1.0.0",
